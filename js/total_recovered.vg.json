{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/ArthurLYR/COVID19-Malaysia/main/data/cases_proportion.csv"
    },
    "height": "container",
    "width": "container",
    "title": {
        "text": "Recovered",
        "color": "#96c485"
    },
    "transform": [
        {
            "filter": {
                "field": "date",
                "equal": {
                    "year": 2023,
                    "month": "Sep",
                    "date": 30
                }
            }
        },
        {
            "filter": "datum.case_type == 'Recovered'"
        }
    ],
    "mark": {
        "type": "text",
        "fontSize": 40,
        "color": "#96c485"
    },
    "encoding": {
        "text": {
            "field": "count",
            "type": "quantitative",
            "format": ","
        }
    },
    "config": {
        "background": "transparent",
        "font": "Garamond",
        "title": {
            "fontSize": 24,
            "fontWeight": "normal"
        },
        "view": {
            "stroke": null
        },
        "customFormatTypes": true
    }
}