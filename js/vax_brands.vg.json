{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height": "container",
    "width": "container",
    "data": {
        "url": "https://raw.githubusercontent.com/ArthurLYR/COVID19-Malaysia/main/data/vax_brand.csv"
    },
    "transform": [
        {
            "timeUnit": "yearmonth",
            "field": "date",
            "as": "date"
        },
        {
            "aggregate": [
                {
                    "op": "sum",
                    "field": "count",
                    "as": "count"
                }
            ],
            "groupby": [
                "date",
                "vax_brand"
            ]
        },
        {
            "sort": [
                {
                    "field": "count",
                    "order": "descending"
                }
            ],
            "window": [
                {
                    "op": "rank",
                    "as": "rank"
                }
            ],
            "groupby": [
                "date"
            ]
        }
    ],
    "encoding": {
        "x": {
            "field": "date",
            "timeUnit": "yearmonth",
            "type": "temporal",
            "axis": {
                "domain": false,
                "ticks": false,
                "tickCount": 18,
                "title": null,
                "labelFontSize": 16,
                "labelPadding": 10
            }
        },
        "y": {
            "field": "rank",
            "type": "ordinal",
            "axis": {
                "domain": false,
                "ticks": false,
                "title": null,
                "labelFontSize": 24,
                "labelPadding": 25
            }
        },
        "color": {
            "condition": {
                "param": "hover",
                "field": "vax_brand",
                "type": "nominal",
                "scale": {
                    "domain": [
                        "AstraZeneca",
                        "Cansino",
                        "Pfizer",
                        "Sinopharm",
                        "Sinovac"
                    ],
                    "range": [
                        "#c4a747",
                        "#008080",
                        "#c3b1e1",
                        "#8eadc5",
                        "#fd5da8"
                    ]
                },
                "legend": null
            },
            "value": "#cccccc"
        },
        "opacity": {
            "condition": [
                {
                    "param": "hover",
                    "value": 1
                }
            ],
            "value": 0.2
        }
    },
    "layer": [
        {
            "params": [
                {
                    "name": "hover",
                    "select": {
                        "type": "point",
                        "fields": [
                            "vax_brand"
                        ],
                        "on": "mouseover"
                    }
                }
            ],
            "mark": {
                "type": "line",
                "point": {
                    "size": 75
                },
                "orient": "vertical",
                "strokeWidth": 8,
                "stroke": "transparent"
            }
        },
        {
            "mark": {
                "type": "line",
                "point": {
                    "size": 75
                },
                "orient": "vertical"
            }
        }
    ],
    "config": {
        "background": "transparent",
        "font": "Open Sans",
        "view": {
            "stroke": null
        },
        "customFormatTypes": true
    }
}