{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "../data/cases_proportion.csv"
    },
    "transform": [
        {
            "filter": {
                "field": "date",
                "equal": {
                    "year": 2023,
                    "month": "Sep",
                    "date": 30
                }
            }
        }
    ],
    "vconcat": [
        {
            "height": 70,
            "width": 600,
            "title": "Total Cases",
            "transform": [
                {
                    "aggregate": [
                        {
                            "op": "sum",
                            "field": "count",
                            "as": "total_cases"
                        }
                    ]
                }
            ],
            "mark": {
                "type": "text",
                "fontSize": 50
            },
            "encoding": {
                "text": {
                    "field": "total_cases",
                    "type": "quantitative",
                    "format": ","
                }
            }
        },
        {
            "hconcat": [
                {
                    "vconcat": [
                        {
                            "height": 50,
                            "width": 200,
                            "title": {
                                "text": "Recovered",
                                "color": "#02d614"
                            },
                            "transform": [
                                {
                                    "filter": "datum.case_type == 'Recovered'"
                                }
                            ],
                            "mark": {
                                "type": "text",
                                "fontSize": 40,
                                "color": "#02d614"
                            },
                            "encoding": {
                                "text": {
                                    "field": "count",
                                    "type": "quantitative",
                                    "format": ","
                                }
                            }
                        },
                        {
                            "data": {
                                "url": "../data/recovered_waffle.csv"
                            },
                            "height": 200,
                            "width": 200,
                            "mark": {
                                "type": "circle",
                                "filled": true,
                                "size": 200
                            },
                            "encoding": {
                                "x": {
                                    "field": "col",
                                    "type": "quantitative",
                                    "axis": null
                                },
                                "y": {
                                    "field": "row",
                                    "type": "quantitative",
                                    "axis": null,
                                    "sort": "-y"
                                },
                                "color": {
                                    "field": "case_type",
                                    "type": "nominal",
                                    "scale": {
                                        "domain": [
                                            "Active",
                                            "Recovered",
                                            "Deaths",
                                            "Others"
                                        ],
                                        "range": [
                                            "#f51d0a",
                                            "#02d614",
                                            "#313331",
                                            "#cccccc"
                                        ]
                                    },
                                    "legend": null
                                }
                            }
                        }
                    ]
                },
                {
                    "vconcat": [
                        {
                            "height": 50,
                            "width": 200,
                            "title": {
                                "text": "Active",
                                "color": "#f51d0a"
                            },
                            "transform": [
                                {
                                    "filter": "datum.case_type == 'Active'"
                                }
                            ],
                            "mark": {
                                "type": "text",
                                "fontSize": 40,
                                "color": "#f51d0a"
                            },
                            "encoding": {
                                "text": {
                                    "field": "count",
                                    "type": "quantitative",
                                    "format": ","
                                }
                            }
                        },
                        {
                            "data": {
                                "url": "../data/active_waffle.csv"
                            },
                            "height": 200,
                            "width": 200,
                            "mark": {
                                "type": "circle",
                                "filled": true,
                                "size": 200
                            },
                            "encoding": {
                                "x": {
                                    "field": "col",
                                    "type": "quantitative",
                                    "axis": null
                                },
                                "y": {
                                    "field": "row",
                                    "type": "quantitative",
                                    "axis": null,
                                    "sort": "-y"
                                },
                                "color": {
                                    "field": "case_type",
                                    "type": "nominal",
                                    "scale": {
                                        "domain": [
                                            "Active",
                                            "Recovered",
                                            "Deaths",
                                            "Others"
                                        ],
                                        "range": [
                                            "#f51d0a",
                                            "#02d614",
                                            "#313331",
                                            "#cccccc"
                                        ]
                                    },
                                    "legend": null
                                }
                            }
                        }
                    ]
                },
                {
                    "vconcat": [
                        {
                            "height": 50,
                            "width": 200,
                            "title": {
                                "text": "Deaths",
                                "color": "#313331"
                            },
                            "transform": [
                                {
                                    "filter": "datum.case_type == 'Deaths'"
                                }
                            ],
                            "mark": {
                                "type": "text",
                                "fontSize": 40,
                                "color": "#313331"
                            },
                            "encoding": {
                                "text": {
                                    "field": "count",
                                    "type": "quantitative",
                                    "format": ","
                                }
                            }
                        },
                        {
                            "data": {
                                "url": "../data/deaths_waffle.csv"
                            },
                            "height": 200,
                            "width": 200,
                            "mark": {
                                "type": "circle",
                                "filled": true,
                                "size": 200
                            },
                            "encoding": {
                                "x": {
                                    "field": "col",
                                    "type": "quantitative",
                                    "axis": null
                                },
                                "y": {
                                    "field": "row",
                                    "type": "quantitative",
                                    "axis": null,
                                    "sort": "-y"
                                },
                                "color": {
                                    "field": "case_type",
                                    "type": "nominal",
                                    "scale": {
                                        "domain": [
                                            "Active",
                                            "Recovered",
                                            "Deaths",
                                            "Others"
                                        ],
                                        "range": [
                                            "#f51d0a",
                                            "#02d614",
                                            "#313331",
                                            "#cccccc"
                                        ]
                                    },
                                    "legend": null
                                }
                            }
                        }
                    ]
                }
            ]
        }
    ],
    "config": {
        "font": "Open Sans",
        "title": {
            "fontSize": 24,
            "fontWeight": "normal"
        },
        "view": {
            "stroke": null
        },
        "customFormatTypes": true
    }
}