{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "data": {
        "url": "../data/cases_proportion.csv"
    },
    "transform": [
        {
            "filter": {
                "field": "date",
                "equal": {
                    "year": 2023,
                    "month": "Sep",
                    "date": 30
                }
            }
        }
    ],
    "encoding": {
        "theta": {
            "field": "count",
            "type": "quantitative"
        },
        "color": {
            "field": "case_type",
            "type": "nominal",
            "scale": {
                "domain": [
                    "Active",
                    "Recovered",
                    "Deaths"
                ],
                "range": [
                    "#f51d0a",
                    "#02d614",
                    "#313331"
                ]
            },
            "legend": null
        }
    },
    "layer": [
        {
            "mark": {
                "type": "arc",
                "innerRadius": 50,
                "outerRadius": 200
            }
        },
        {
            "mark": {
                "type": "text",
                "radius": 210
            },
            "encoding": {
                "text": {
                    "field": "case_type",
                    "type": "nominal"
                }
            }
        }
    ],
    "config": {
        "font": "Open Sans",
        "view": {
            "stroke": null
        },
        "customFormatTypes": true
    }
}