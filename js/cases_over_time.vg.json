{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "../data/cases_deaths_malaysia.csv"
    },
    "params": [
        {
            "name": "case_type_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "New Cases",
                    "Recovered Cases",
                    "New Deaths"
                ],
                "labels": [
                    "All",
                    "New Cases",
                    "Recovered Cases",
                    "New Deaths"
                ],
                "name": "Case Type: "
            }
        }
    ],
    "vconcat": [
        {
            "width": "container",
            "height": 400,
            "transform": [
                {
                    "filter": "case_type_selection == null || datum.case_type == case_type_selection"
                },
                {
                    "timeUnit": "yearmonth",
                    "field": "date",
                    "as": "date"
                }
            ],
            "encoding": {
                "x": {
                    "field": "date",
                    "timeUnit": "yearmonth",
                    "type": "temporal",
                    "title": "Date",
                    "scale": {
                        "domain": {
                            "param": "brush"
                        }
                    },
                    "axis": {
                        "grid": false,
                        "ticks": false,
                        "domain": false,
                        "title": null
                    }
                }
            },
            "layer": [
                {
                    "encoding": {
                        "color": {
                            "field": "case_type",
                            "type": "nominal",
                            "title": "Case Type",
                            "scale": {
                                "domain": [
                                    "New Cases",
                                    "Recovered Cases",
                                    "New Deaths"
                                ],
                                "range": [
                                    "#f51d0a",
                                    "#02d614",
                                    "#313331"
                                ]
                            },
                            "legend": null
                        },
                        "y": {
                            "field": "count",
                            "aggregate": "sum",
                            "type": "quantitative",
                            "title": "Case Count",
                            "axis": {
                                "domain": false,
                                "ticks": false,
                                "title": null
                            }
                        }
                    },
                    "layer": [
                        {
                            "mark": "line"
                        },
                        {
                            "transform": [
                                {
                                    "filter": {
                                        "param": "hover",
                                        "empty": false
                                    }
                                }
                            ],
                            "mark": "point"
                        }
                    ]
                },
                {
                    "data": {
                        "url": "../data/cases_deaths_malaysia_labels.csv"
                    },
                    "mark": {
                        "type": "rule",
                        "strokeDash": [
                            10,
                            10
                        ]
                    },
                    "encoding": {
                        "x": {
                            "field": "date",
                            "timeUnit": "yearmonthdate",
                            "type": "temporal"
                        },
                        "color": {
                            "value": "#cccccc"
                        }
                    }
                },
                {
                    "data": {
                        "url": "../data/cases_deaths_malaysia_labels.csv"
                    },
                    "mark": {
                        "type": "text",
                        "lineBreak": "\\",
                        "align": "right",
                        "fontStyle": "italic",
                        "dx": -5
                    },
                    "encoding": {
                        "x": {
                            "field": "date",
                            "timeUnit": "yearmonthdate",
                            "type": "temporal"
                        },
                        "text": {
                            "field": "annotation",
                            "type": "nominal"
                        }
                    }
                },
                {
                    "transform": [
                        {
                            "pivot": "case_type",
                            "value": "count",
                            "groupby": [
                                "date"
                            ]
                        }
                    ],
                    "mark": "rule",
                    "encoding": {
                        "opacity": {
                            "condition": {
                                "value": 0.3,
                                "param": "hover",
                                "empty": false
                            },
                            "value": 0
                        },
                        "tooltip": [
                            {
                                "field": "date",
                                "timeUnit": "yearmonth",
                                "type": "temporal",
                                "title": "Date"
                            },
                            {
                                "field": "New Cases",
                                "type": "quantitative",
                                "formatType": "casesTooltip"
                            },
                            {
                                "field": "Recovered Cases",
                                "type": "quantitative",
                                "formatType": "casesTooltip"
                            },
                            {
                                "field": "New Deaths",
                                "type": "quantitative",
                                "formatType": "casesTooltip"
                            }
                        ]
                    },
                    "params": [
                        {
                            "name": "hover",
                            "select": {
                                "type": "point",
                                "fields": [
                                    "date"
                                ],
                                "nearest": true,
                                "on": "mouseover",
                                "clear": "mouseout"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "width": "container",
            "height": 100,
            "mark": "area",
            "params": [
                {
                    "name": "brush",
                    "select": {
                        "type": "interval",
                        "encodings": [
                            "x"
                        ]
                    }
                }
            ],
            "transform": [
                {
                    "filter": "case_type_selection == null || datum.case_type == case_type_selection"
                },
                {
                    "timeUnit": "yearmonth",
                    "field": "date",
                    "as": "date"
                }
            ],
            "encoding": {
                "x": {
                    "field": "date",
                    "timeUnit": "yearmonth",
                    "type": "temporal",
                    "title": "Date",
                    "axis": {
                        "grid": false,
                        "ticks": false,
                        "domain": false,
                        "title": null
                    }
                },
                "color": {
                    "field": "case_type",
                    "type": "nominal",
                    "title": "Case Type",
                    "scale": {
                        "domain": [
                            "New Cases",
                            "Recovered Cases",
                            "New Deaths"
                        ],
                        "range": [
                            "#f51d0a",
                            "#02d614",
                            "#313331"
                        ]
                    },
                    "legend": null
                },
                "y": {
                    "field": "count",
                    "aggregate": "sum",
                    "type": "quantitative",
                    "title": "Case Count",
                    "axis": {
                        "domain": false,
                        "ticks": false,
                        "title": null
                    }
                }
            }
        }
    ],
    "config": {
        "font": "Open Sans",
        "view": {
            "stroke": null
        },
        "customFormatTypes": true
    }
}