{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": "container",
    "data": {
        "url": "../data/vax_cumul_malaysia.csv"
    },
    "transform": [
        {
            "filter": {
                "field": "date",
                "equal": {
                    "year": 2023,
                    "month": "Oct",
                    "date": 5
                }
            }
        }
    ],
    "layer": [
        {
            "data": {
                "values": [
                    {
                        "vax_type": "Dose 1",
                        "percentage": 100
                    },
                    {
                        "vax_type": "Dose 2",
                        "percentage": 100
                    },
                    {
                        "vax_type": "Booster 1",
                        "percentage": 100
                    },
                    {
                        "vax_type": "Booster 2",
                        "percentage": 100
                    }
                ]
            },
            "mark": {
                "type": "bar",
                "size": 1,
                "cornerRadius": 50
            },
            "encoding": {
                "x": {
                    "field": "percentage",
                    "type": "quantitative",
                    "title": "Percentage Vaccinated",
                    "scale": {
                        "domain": [
                            0,
                            100
                        ]
                    }
                },
                "y": {
                    "field": "vax_type",
                    "type": "nominal",
                    "axis": {
                        "ticks": false,
                        "domain": false,
                        "title": null
                    },
                    "sort": {
                        "order": null
                    }
                },
                "color": {
                    "value": "#cccccc"
                }
            }
        },
        {
            "encoding": {
                "x": {
                    "field": "percentage",
                    "type": "quantitative",
                    "title": "Percentage Vaccinated",
                    "scale": {
                        "domain": [
                            0,
                            100
                        ]
                    }
                },
                "y": {
                    "field": "vax_type",
                    "type": "nominal",
                    "axis": {
                        "ticks": false,
                        "domain": false,
                        "title": null
                    },
                    "sort": {
                        "order": null
                    }
                },
                "color": {
                    "field": "vax_type",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                            "Dose 1",
                            "Dose 2",
                            "Booster 1",
                            "Booster 2"
                        ],
                        "range": [
                            "#4292c6",
                            "#2171b5",
                            "#08519c",
                            "#08306b"
                        ]
                    },
                    "legend": null
                },
                "tooltip": [
                    {
                        "field": "date",
                        "type": "temporal",
                        "title": "Date"
                    },
                    {
                        "field": "vax_type",
                        "type": "nominal",
                        "title": "Vaccination Type"
                    },
                    {
                        "field": "count",
                        "type": "quantitative",
                        "title": "Count",
                        "format": ","
                    },
                    {
                        "field": "percentage",
                        "type": "quantitative",
                        "title": "Percentage",
                        "formatType": "percentage"
                    }
                ]
            },
            "layer": [
                {
                    "mark": {
                        "type": "bar",
                        "size": 5,
                        "opacity": 1,
                        "cornerRadius": 50
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "fontSize": 20,
                        "align": "left",
                        "baseline": "middle",
                        "dx": 20
                    },
                    "encoding": {
                        "text": {
                            "field": "percentage",
                            "type": "quantitative",
                            "formatType": "percentage"
                        }
                    }
                }
            ]
        },
        {
            "mark": {
                "type": "point",
                "size": 500,
                "filled": true,
                "opacity": 1
            },
            "encoding": {
                "x": {
                    "field": "percentage",
                    "type": "quantitative",
                    "title": "Percentage Vaccinated",
                    "scale": {
                        "domain": [
                            0,
                            100
                        ]
                    }
                },
                "y": {
                    "field": "vax_type",
                    "type": "nominal",
                    "axis": {
                        "ticks": false,
                        "domain": false,
                        "title": null,
                        "labelFontSize": 20,
                        "labelPadding": 20
                    },
                    "sort": {
                        "order": null
                    }
                },
                "color": {
                    "field": "vax_type",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                            "Dose 1",
                            "Dose 2",
                            "Booster 1",
                            "Booster 2"
                        ],
                        "range": [
                            "#4292c6",
                            "#2171b5",
                            "#08519c",
                            "#08306b"
                        ]
                    },
                    "legend": null
                },
                "tooltip": [
                    {
                        "field": "date",
                        "type": "temporal",
                        "title": "Date"
                    },
                    {
                        "field": "vax_type",
                        "type": "nominal",
                        "title": "Vaccination Type"
                    },
                    {
                        "field": "count",
                        "type": "quantitative",
                        "title": "Count",
                        "format": ","
                    },
                    {
                        "field": "percentage",
                        "type": "quantitative",
                        "title": "Percentage",
                        "formatType": "percentage"
                    }
                ]
            }
        }
    ],
    "config": {
        "background": "transparent",
        "font": "Open Sans",
        "axis": {
            "disable": true
        },
        "view": {
            "stroke": null
        },
        "customFormatTypes": true
    }
}