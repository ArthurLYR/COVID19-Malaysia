{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "projection": {
        "type": "equirectangular"
    },
    "layer": [
        {
            "data": {
                "url": "../data/malaysia_states.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_50m_ocean"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightblue",
                "stroke": "lightblue",
                "strokeWidth": 1
            }
        },
        {
            "data": {
                "url": "../data/malaysia_states.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_50m_graticules_5"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "#dbdbdb"
            }
        },
        {
            "data": {
                "url": "../data/malaysia_states.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_50m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "#f0f0f0",
                "stroke": "#f0f0f0",
                "strokeWidth": 1
            }
        },
        {
            "data": {
                "url": "../data/cases_state.csv"
            },
            "transform": [
                {
                    "lookup": "state",
                    "from": {
                        "data": {
                            "url": "../data/malaysia_states.json",
                            "format": {
                                "type": "topojson",
                                "feature": "gadm41_MYS_1"
                            }
                        },
                        "key": "properties.NAME_1"
                    },
                    "as": "geo"
                },
                {
                    "lookup": "state",
                    "from": {
                        "data": {
                            "url": "../data/population.csv"
                        },
                        "key": "state",
                        "fields": [
                            "pop"
                        ]
                    }
                },
                {
                    "filter": {
                        "field": "date",
                        "equal": {
                            "year": 2023,
                            "month": "Sep",
                            "date": 30
                        }
                    }
                },
                {
                    "calculate": "(abs(datum.cases_active) + 0.1) / datum.pop * 10000",
                    "as": "cases_active_10000"
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "#f0f0f0",
                "strokeWidth": 1
            },
            "encoding": {
                "shape": {
                    "field": "geo",
                    "type": "geojson"
                },
                "color": {
                    "field": "cases_active_10000",
                    "type": "quantitative",
                    "title": [
                        "Active Cases",
                        "(per 10,000 population)"
                    ],
                    "scale": {
                        "scheme": "reds",
                        "type": "log"
                    }
                },
                "tooltip": [
                    {
                        "field": "state",
                        "type": "nominal",
                        "title": "State"
                    },
                    {
                        "field": "date",
                        "type": "temporal",
                        "title": "Date"
                    },
                    {
                        "field": "cases_active_10000",
                        "type": "quantitative",
                        "title": "Active Cases (per 10,000 population)",
                        "format": ".2f"
                    }
                ]
            }
        }
    ],
    "config": {
        "font": "Open Sans",
        "view": {
            "stroke": null
        },
        "customFormatTypes": true
    }
}