{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "../data/recovered_waffle.csv"
    },
    "height": "container",
    "width": "container",
    "mark": {
        "type": "circle",
        "filled": true,
        "size": 400
    },
    "encoding": {
        "x": {
            "field": "col",
            "type": "quantitative",
            "axis": null
        },
        "y": {
            "field": "row",
            "type": "quantitative",
            "axis": null,
            "sort": "-y"
        },
        "color": {
            "field": "case_type",
            "type": "nominal",
            "scale": {
                "domain": [
                    "Recovered",
                    "Others"
                ],
                "range": [
                    "#96c485",
                    "#cccccc"
                ]
            },
            "legend": null
        }
    },
    "config": {
        "background": "transparent",
        "font": "Open Sans",
        "title": {
            "fontSize": 24,
            "fontWeight": "normal"
        },
        "view": {
            "stroke": null
        },
        "customFormatTypes": true
    }
}